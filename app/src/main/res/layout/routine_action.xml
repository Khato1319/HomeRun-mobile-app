<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_device"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/text_device"
        style="@style/default_text_style_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Habitacion"
        android:translationZ="90dp"
        app:layout_constraintLeft_toLeftOf="@+id/card_view_device"
        app:layout_constraintTop_toTopOf="@+id/card_view_device"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_device"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_action"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="1dp"

        app:layout_constraintTop_toBottomOf="@id/card_view_device"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_action"
        style="@style/default_text_style_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habitacion"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_action"
        app:layout_constraintLeft_toLeftOf="@+id/card_view_action"
        app:layout_constraintTop_toTopOf="@+id/card_view_action" />

    <androidx.cardview.widget.CardView
        android:id="@+id/color_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_action"
        app:layout_constraintLeft_toRightOf="@+id/text_action"
        app:layout_constraintTop_toTopOf="@+id/card_view_action" />

</androidx.constraintlayout.widget.ConstraintLayout>